    {name: "Quickstart", href: "/quickstart"},
    {name: "Calculator", href: "/calculator"},
    {name: "Database", href: "/database"},
    {name: "Legal Notice", href: "/legal"},
    {name: "Contact Us", href: 'https://health-analytics-mx.odoo.com/about-us'},
