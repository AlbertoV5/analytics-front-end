---
/** Combines multiple Footer components into one using a defined layout. */

import FooterLayout from "./layouts/FooterLayout.astro";
import FooterMenu from "./components/FooterMenu.astro";
import FooterAbout from "./components/FooterAbout.astro";
import FooterContactSocials from "./components/FooterContactSocials.astro";
import FooterCopyrightStrip from "./components/FooterCopyrightStrip.astro";

const BASE_URL = import.meta.env.BASE_URL;
const links = [
    {name: "Home", href: BASE_URL},
    {name: "Calculators", href: `${BASE_URL}calculators`},
    {name: "Metrics", href: `${BASE_URL}metrics`},
    {name: "Database", href: `${BASE_URL}database`},
    {name: "Support", href: `${BASE_URL}support`},
    {name: "Legal Notice", href: `${BASE_URL}legal`},
    {name: "Contact Us", href: 'https://healthanalyticsmx.com/#bgLayers_comp-klwhcnh9', blank: true},
]
const contact = [
    {icon: "email", info: "avq5ac1@gmail.com"},
    {icon: "phone", info: "+52 2291-727567"}
]
const socials = [
    {icon: "twitter", link: "https://twitter.com/_MxAnalytics"}
]
---
<FooterLayout>
    <FooterAbout slot="left" title="Health Analytics MX">
        Our company combines cutting-edge computational systems using Data Science for the Health & Wellness field.
        We offer novel Machine Learning Applications and Calculators for the medical field, helping doctors and hospitals to be part of the Artifical Intelligence Revolution.
    </FooterAbout>
    <FooterMenu slot="center" title="Menu" links={links}/>
    <FooterContactSocials
        slot="right"
        contactTitle="Contact" 
        contact={contact} 
        socialsTitle="Socials" 
        socials={socials}
    />
    <FooterCopyrightStrip slot="bottom">
        Copyright 2023 Â© Health Analytics MX
    </FooterCopyrightStrip>
</FooterLayout>