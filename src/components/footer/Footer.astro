---
import TopRow from "./components/TopRow.astro";
import MidRow from "./components/MidRow.astro";
import BotRow from "./components/BotRow.astro";
import { Icon } from "astro-icon";

const BASE_URL = import.meta.env.BASE_URL;
const twitterLink = "https://twitter.com/MxBuildings";
const links = [
    {name: "Home", href: BASE_URL},
    {name: "Calculators", href: `${BASE_URL}calculators`},
    {name: "Metrics", href: `${BASE_URL}metrics`},
    {name: "Database", href: `${BASE_URL}database`},
    {name: "Support", href: `${BASE_URL}support`},
    {name: "Legal Notice", href: `${BASE_URL}legal`},
    {name: "Contact Us", href: 'https://healthanalyticsmx.com/', blank: true},
]
---
<style is:inline>
    [astro-icon="email"] { 
        width: 100%;
        width: 24px;
        height: 24px;
    }
    [astro-icon="phone"] { 
        width: 100%;
        width: 24px;
        height: 24px;
    }
    [astro-icon="twitter"] { 
        padding: 16px;
        padding-bottom: 20px;
        color: #55ACEE; 
    }
    [astro-icon="linkedin"] {
        padding: 16px;
        padding-bottom: 20px;
        color: #007bb5; 
    }
    [astro-icon]:hover {
        color: #999999; 
    }
    .icon-wrapper {
        display: inline-block;
        background-color: #F8F9FA;
        width: 3em;
        height: 3em;
        margin: 0px 4px 0px 4px;
        border-radius: 45px;
        box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 8%);
        text-decoration: none;
    }
</style>


<footer id="footer" class="bg-primary text-light mt-2">   
    <div id="footer-wrapper" class="container-fluid footer-container">
        <div class="row">
            <div class="col-12 col-md-5 pb-4">
                <div class="row" style="padding-right: 3em;">
                    <h1 class="footer-header text-uppercase">
                        Health Analytics MX
                    </h1>
                    <p class="footer-text">
                        We are a team of passionate people whose goal is to improve everyone's life through disruptive products. We build great products to solve your business problems.
                    </p>
                    <p class="footer-text">
                        Our products are designed for small to medium size companies willing to optimize their performance.
                    </p>
                </div>
            </div>
            <div class="col-0 col-md-1"></div>
            <div class="col-6 col-md-3">
                <div class="row">
                    <h1 class="footer-header text-uppercase">
                        Menu
                    </h1>
                    <ul>{links.map(link => (
                        <li id={`${link.name.toLowerCase()}-footer`}>
                            <a class="footer-link" 
                                id={`${link.name.toLowerCase()}-footer-link`} 
                                href={`${link.href}`} 
                                target={link.blank ? 'blank' : '_self'}
                            >
                                {link.name}
                            </a>
                        </li>
                    ))}
                    </ul>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="row">
                    <h1 class='footer-header text-uppercase'>
                        Contact
                    </h1>
                    <ul class="px-1 mx-1" style="line-height: 1.6em;">
                        <li>
                            <Icon name="email" alt="email logo"></Icon>
                            <span>avq5ac1@gmail.com</span>
                        </li>
                        <li>
                            <Icon name="phone" alt="phone logo"></Icon>
                            <span>+52 2291-727567</span>
                        </li>
                    </ul>
                    <h1 class='footer-header text-uppercase pt-2'>
                        Socials
                    </h1>
                    <p><a 
                            id="socials-twitter-link" 
                            class="icon-wrapper" 
                            href={twitterLink}
                            aria-label="Link to Twitter Profile"
                            target="_blank"
                        >
                        <Icon name="twitter" alt="Twitter logo"></Icon>
                    </a></p>
                </div>
            </div>
        </div>
    </div>
    <div id="footer-copyright" class="container-fluid sub-footer-container bg-dark text-muted">
        <section id="footer-copyright-content">
            <p>
                Copyright 2023 Â© Health Analytics MX
            </p>
        </section>
    </div>
</footer>
