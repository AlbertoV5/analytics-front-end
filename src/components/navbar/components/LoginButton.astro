---
interface Props {
    name?: string;
    href?: string;
    idSuffix?: string;
    gray?: boolean;
    style?: string;
}
const {
    name='Login', 
    href='login', 
    idSuffix='-login-button',
    gray=false,
    style=""
} = Astro.props;

const URL = import.meta.env.BASE_URL;
---
<a
    id={`${name.toLowerCase()}${idSuffix}`}
    class={`nav-button ${gray ? '' : 'login-success'}`}
    href={`${URL}${href}`}
    style={style}
>
    {name}
</a>