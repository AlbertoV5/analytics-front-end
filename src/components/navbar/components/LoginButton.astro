---
interface Props {
    name?: string;
    href?: string;
    idSuffix?: string;
}
const {
    name='Login', 
    href='login', 
    idSuffix='-login-button'
} = Astro.props;

const URL = import.meta.env.BASE_URL;
---
<a
    id={`${name.toLowerCase()}${idSuffix}`}
    class="nav-button"
    href={`${URL}${href}`}
>
    {name}
</a>