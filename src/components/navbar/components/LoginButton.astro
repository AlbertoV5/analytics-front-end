---
interface Props {
    name?: string;
    href?: string;
    idSuffix?: string;
}
const {
    name='Login', 
    href='/login', 
    idSuffix='-login-button'
} = Astro.props;
---
<a
    id={`${name.toLowerCase()}${idSuffix}`}
    type="button"
    class="btn btn-primary border-0 rounded-0 mx-1 px-3" 
    href={href}
    style={{fontWeight: "500", height: "36px"}}
>
    {name}
</a>