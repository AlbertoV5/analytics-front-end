---
interface Props {
    name: string;
    href: string;
    idSuffix?: string;
}
const {
    name='Login', 
    href='/login', 
    idSuffix='-nav-button'
} = Astro.props;
---
<button class="btn btn-primary border-0 rounded-0 mx-1 px-2">
    <a id={`${name.toLowerCase()}${idSuffix}`} class="nav-link" href={href} 
        style={{fontWeight: "500"}}>
        {name}
    </a>
</button>