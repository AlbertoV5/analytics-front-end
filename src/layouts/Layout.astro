---
import bootstrap from "bootstrap/dist/js/bootstrap.bundle.min.js?url";
import Footer from "../components/footer/Footer.astro";
import NavBar from "../components/navbar/NavBar.astro";

// SEO tags
const metaTags = [
	{name: "author", content: "Health Analytics MX"},
	{name: "description", content: "Medical Calculators with Artificial Intelligence"}
]

// Astro Props
export interface Props {
	title: string;
}
const { title } = Astro.props;

// Config
const BASE_URL = import.meta.env.BASE_URL;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		{metaTags.map(tag => (<meta name={tag.name} content={tag.content} />))}
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta http-equiv="Content-Security-Policy" content="script-src 'self' 'unsafe-inline'">
		<meta http-equiv="Content-Security-Policy" content="object-src 'none'">
		<style is:inline>
			html {
				background-color: #003135; 
			}
			button {
				background-color: #003135;
			}
			a {
				color: #fff;
			}
		</style>
		<script>
			(window as any).global = window;
		</script>
		<script src={bootstrap}></script>
		<script src="../scripts/navbar.js"></script>
		<link rel="icon" type="image/svg+xml" href={`${BASE_URL}favicon.svg`}/>
		<link rel="stylesheet" type="text/css" href={`${BASE_URL}custom.css`}>
	</head>
	<body>
		<NavBar/>
		<slot/>
		<Footer/>
	</body>
</html>